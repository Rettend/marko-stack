{
  "name": "marko-stack",
  "type": "module",
  "private": true,
  "module": "index.ts",
  "scripts": {
    "dev": "bun --bun marko-run src/index.ts",
    "build": "bun --bun marko-run build src/index.ts",
    "preview": "bun --bun marko-run preview src/index.ts",
    "lint": "eslint . --fix",
    "format": "prettier \"**/*.marko\" -w",
    "update": "taze latest -wr"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "elysia": "^1.4.5",
    "marko": "^6.0.74"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@marko/run": "^0.8.1",
    "@marko/run-adapter-node": "^2.0.3",
    "@marko/vite": "^5.3.0",
    "@types/bun": "latest",
    "@unocss/eslint-plugin": "^66.5.1",
    "eslint": "^9.35.0",
    "eslint-plugin-format": "^1.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-marko": "^3.3.2",
    "taze": "^19.6.0",
    "unocss": "^66.5.1",
    "vite": "^7.1.5"
  },
  "prettier": {
    "markoSyntax": "html",
    "semi": false,
    "plugins": ["prettier-plugin-marko"]
  }
}
